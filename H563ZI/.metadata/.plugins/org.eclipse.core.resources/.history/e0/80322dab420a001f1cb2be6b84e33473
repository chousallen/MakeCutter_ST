#include "stm32h5xx.h"
#include "keypad.h"

uint8_t Last_Key_Down[1];

void Keypad_Start(Keypad *kb, GPIO_TypeDef* *_RowPorts, GPIO_TypeDef* *_ColPorts, uint16_t *_RowPins, uint16_t *_ColPins)
{
	kb->RowPorts = _RowPorts;
	kb->ColPorts = _ColPorts;
	kb->RowPins = _RowPins;
	kb->ColPins = _ColPins;
	kb->rising_pin = 255;

}
